<body>
   
    <!-- Page Header Start -->
    <div class="container-fluid mb-5" style="background-color: #EDF1FF;">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px; background-color: #EDF1FF; ">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
            <div class="d-inline-flex">
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Checkout Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                    <div class="row">
                        <form id="checkoutForm" method="post" action="@Url.Action("completeOrder", "ShoppingCart")">
                            <div class="col-md-6 form-group">
                                <label>Full Name</label>
                                <input class="form-control" type="text" placeholder="Your full name" value="@Model.userDetails?.full_name" name="userDetails.full_name">
                                <div>@Html.ValidationMessageFor(x => x.userDetails.full_name)</div>

                            </div>
                            <div class="col-md-6 form-group">
                                <label>Country</label>
                                <input class="form-control" type="text" placeholder="Israel" value="Israel">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input class="form-control" type="text" placeholder="example@email.com" value="@Model.userDetails?.email" name="userDetails.email">
                                <div>@Html.ValidationMessageFor(x => x.userDetails.email)</div>

                            </div>
                            <div class="col-md-6 form-group">
                                <label>Mobile phone</label>
                                <input class="form-control" type="text" placeholder="+972 50 4567134" value="@Model.userDetails?.phone" name="userDetails.phone">
                                <div>@Html.ValidationMessageFor(x => x.userDetails.phone)</div>

                            </div>
                            <div class="col-md-6 form-group">
                                <label>Full address</label>
                                <input class="form-control" type="text" placeholder="123 Street" value="@Model.userDetails?.address" name="userDetails.address">
                                <div>@Html.ValidationMessageFor(x => x.userDetails.address)</div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>City</label>
                                <input class="form-control" type="text" placeholder="Tel Aviv" value="@Model.userDetails?.city" name="userDetails.city">
                                <div>@Html.ValidationMessageFor(x => x.userDetails.city)</div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header border-0" style="background-color: #EDF1FF;">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        @foreach (DataRow row in Model.Products.Rows)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@row["name"] x @row["quantity"]</p>
                                @if (Convert.ToDecimal(row["percent"]) == 0)
                                {
                                    <p>@($"${Convert.ToDecimal(row["price"]) * Convert.ToInt32(row["quantity"]):N2}")</p>
                                }
                                else
                                {
                                    <p>@($"${((Convert.ToDecimal(row["price"]) * Convert.ToInt32(row["quantity"]))-(Convert.ToDecimal(row["price"]) * Convert.ToInt32(row["quantity"])) * Convert.ToDecimal(row["percent"]) / 100):N2}")</p>
                                }
                            </div>
                        }
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">@($"${Model.Subtotal:N2}")</h6>

                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">@($"${Model.Subtotal + 10:N2}")</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header border-0" style="background-color: #EDF1FF;">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <form id="paymentForm">
                        <!-- Add input fields for personal details -->
                        <!-- Credit card information -->
                        <div class="form-group">
                            <label>Credit Card Number</label>
                            <input class="form-control" type="text" placeholder="Enter credit card number" name="creditCardNumber" id="creditCardNumber">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Expiration Date</label>
                                <input class="form-control" type="text" placeholder="MM/YY" name="expirationDate" id="expirationDate">
                            </div>
                            <div class="form-group col-md-6">
                                <label>CVV</label>
                                <input class="form-control" type="text" placeholder="CVV" name="cvv" id="cvv">
                            </div>
                        </div>
                        <!-- Validation messages -->
                        <div id="validationMessages"></div>
                    </form>

                    <div class="card-footer border-secondary bg-transparent">
                        <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" id="validateCreditCardBtn" style="color: black; background-color: #D19C97; border: hidden;">Validate Credit Card</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Checkout End -->
    <!-- Footer Start -->
    <div class="container-fluid text-dark mt-5 pt-5" style="background-color: #EDF1FF;">
        <div class="row px-xl-5 pt-5">
