    <script>// Function to validate credit card number
        function isValidCreditCardNumber(cardNumber) {
            return /^\d{16}$/.test(cardNumber);
        }

        // Function to validate expiration date
        function isValidExpirationDate(expirationDate) {
            var currentDate = new Date();
            var inputDate = new Date('20' + expirationDate.slice(3) + '-' + expirationDate.slice(0, 2) + '-01');
            return inputDate > currentDate;
        }

        // Function to validate CVV
        function isValidCVV(cvv) {
            return /^\d{3}$/.test(cvv);
        }

        // Function to handle form submission
        document.getElementById('validateCreditCardBtn').addEventListener('click', function (event) {
            event.preventDefault();

            var cardNumber = document.getElementById('creditCardNumber').value;
            var expirationDate = document.getElementById('expirationDate').value;
            var cvv = document.getElementById('cvv').value;

            var validationMessages = document.getElementById('validationMessages');
            validationMessages.innerHTML = '';

            var isValid = true;

            // Validate credit card number
            if (!isValidCreditCardNumber(cardNumber)) {
                validationMessages.innerHTML += '<div>Invalid credit card number</div>';
                isValid = false;
            }

            // Validate expiration date
            if (!isValidExpirationDate(expirationDate)) {
                validationMessages.innerHTML += '<div>Expiration date must be after the current date</div>';
                isValid = false;
            }

            // Validate CVV
            if (!isValidCVV(cvv)) {
                validationMessages.innerHTML += '<div>CVV must be 3 digits long</div>';
                isValid = false;
            }

            // If all validations pass, submit the form
            if (isValid) {
                document.getElementById('checkoutForm').submit();
            }
        });</script>

