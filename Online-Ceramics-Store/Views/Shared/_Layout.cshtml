
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kal-Vahomer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Online_Ceramics_Store.styles.css" asp-append-version="true" />
    <style>
        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-menu li {
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-menu li:hover {
                    background-color: #f1f1f1;
                }

    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("HomePage", "Home")" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold" style="color: black;">Kal Vahomer</h1>
                </a>
                <span class="text-muted px-2">|</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (@ViewBag.CustId != null)
                    {
                        <ul class="navbar-nav mr-auto">

                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("faqs", "Reference")">FAQs</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("Contact", "Reference")">Help</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("Contact", "Reference")">Support</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li>
                                <a class="text-dark" href="@Url.Action("shop", "Products")" >Shop</a>
                            </li>

                        </ul>
                        
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a href="@Url.Action("cart", "ShoppingCart")" class="btn border">
                                    <i class="fas fa-shopping-cart text"></i>
                                    <span class="badge">0</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" aria-haspopup="true" aria-expanded="false" onclick="toggleDropdown('dropdown-menu')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                    </svg> Hello @ViewBag.FullName
                                </a>
                                <ul class="dropdown-menu" id="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">My Orders</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>

                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav mr-auto">

                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("faqs", "Reference")">FAQs</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("Contact", "Reference")">Help</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="text-dark" href="@Url.Action("Contact", "Reference")">Support</a>
                                <span class="text-muted px-2">|</span>
                            </li>
                            <li>
                                <a class="text-dark" href="@Url.Action("shop", "Products")" >Shop</a>
                            </li>
                            
                        </ul>
                       
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a href="@Url.Action("cart", "ShoppingCart")" class="btn border">
                                    <i class="fas fa-shopping-cart text"></i>
                                    <span class="badge">0</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="RegisterCustomer">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }


                </div>
            </div>
        </nav>
    </header>
    

    <div class="container-fluid">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleDropdown(id) {
            var dropdownMenu = document.getElementById(id);
            if (dropdownMenu.style.display === "none" || dropdownMenu.style.display === "") {
                dropdownMenu.style.display = "block";
            } else {
                dropdownMenu.style.display = "none";
            }
        }

        // Close dropdown when clicking outside
        window.onclick = function (event) {
            if (!event.target.matches('.dropdown-toggle')) {
                var dropdowns = document.getElementsByClassName("dropdown-menu");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.style.display === "block") {
                        openDropdown.style.display = "none";
                    }
                }
            }
        }

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

